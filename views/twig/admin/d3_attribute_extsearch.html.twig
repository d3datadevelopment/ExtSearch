{% include "headitem.html.twig" with {title: "GENERAL_ADMIN_TITLE"|translate} %}

{% d3modcfgcheck modid="d3_extsearch" %}{% endd3modcfgcheck %}

{% if readonly %}
    {% set readonly = "readonly disabled" %}
{% else %}
    {% set readonly = "" %}
{% endif %}

<form name="transfer" id="transfer" action="{{ oViewConf.getSelfLink()|raw}}" method="post">
    {{ oViewConf.getHiddenSid()|raw }}
    <input type="hidden" name="oxid" value="{{ oxid }}">
    <input type="hidden" name="cl" value="{{ oViewConf.getActiveClassName() }}">
    <input type="hidden" name="editlanguage" value="{{ editlanguage }}">
</form>

<form name="myedit" id="myedit" action="{{ oViewConf.getSelfLink()|raw}}" method="post">
    {{ oViewConf.getHiddenSid()|raw }}
    <input type="hidden" name="cl" value="{{ oViewConf.getActiveClassName() }}">
    <input type="hidden" name="fnc" value="">
    <input type="hidden" name="oxid" value="{{ oxid }}">
    <input type="hidden" name="editval[d3_extsearch_attribute2object__oxid]" value="{{ oxid }}">

    <table style="padding: 0; border: 0; width: 98%">
        <tr>
            <!-- Anfang rechte Seite -->
            <td style="vertical-align: top; text-align: left; width: 50%" class="edittext">

                <table style="padding: 0; border: 0">
                    {% block d3_admin_attribute_extsearch_form %}
                        <tr>
                            <td class="edittext" colspan="2">
                                <h3>{{ translate({ ident: "D3_EXTSEARCH_SETTINGS" }) }} {% include "inputhelp.html.twig" with {'sHelpId': help_id("D3_EXTSEARCH_SETTINGS_DESC"), 'sHelpText': help_text("D3_EXTSEARCH_SETTINGS_DESC")} %}</h3>
                            </td>
                        </tr>

                        <tr>
                            <td class="edittext">
                                <label for="d3notuse4filter">{{ translate({ ident: "D3_EXTSEARCH_ATTRIBUTE_NOTUSE4FILTER" }) }}</label>
                            </td>
                            <td class="edittext">
                                <input type="hidden" name="editval[oxattribute__d3notuse4filter]" value="0">
                                <input type="checkbox" name="editval[oxattribute__d3notuse4filter]" id="d3notuse4filter" value="1" class="edittext" {% if edit.oxattribute__d3notuse4filter.value == 1 %}CHECKED{% endif %} {{ readonly }}>
                                {% include "inputhelp.html.twig" with {'sHelpId': help_id("D3_EXTSEARCH_ATTRIBUTE_NOTUSE4FILTER_DESC"), 'sHelpText': help_text("D3_EXTSEARCH_ATTRIBUTE_NOTUSE4FILTER_DESC")} %}
                            </td>
                        </tr>

                        <tr>
                            <td class="edittext">
                                <label for="d3hideoneitemfilter">{{ translate({ ident: "D3_EXTSEARCH_ATTRIBUTE_HIDEONEITEMFILTER" }) }}</label>
                            </td>
                            <td class="edittext">
                                <input type="hidden" name="editval[oxattribute__d3hideoneitemfilter]" value="0">
                                <input type="checkbox" name="editval[oxattribute__d3hideoneitemfilter]" id="d3hideoneitemfilter" value="1" class="edittext" {% if edit.oxattribute__d3hideoneitemfilter.value == 1 %}CHECKED{% endif %} {{ readonly }}>
                                {% include "inputhelp.html.twig" with {'sHelpId': help_id("D3_EXTSEARCH_ATTRIBUTE_HIDEONEITEMFILTER_DESC"), 'sHelpText': help_text("D3_EXTSEARCH_ATTRIBUTE_HIDEONEITEMFILTER_DESC")} %}
                            </td>
                        </tr>

                        <tr>
                            <td class="edittext">
                                <label for="d3useCorrespondingValues">{{ translate({ ident: "D3_EXTSEARCH_ATTRIBUTE_USECORRESPONDINGVALUES" }) }}</label>
                            </td>
                            <td class="edittext">
                                <input type="hidden" name="editval[oxattribute__d3usecorrespondingvalues]" value="0">
                                <input type="checkbox" name="editval[oxattribute__d3usecorrespondingvalues]" id="d3useCorrespondingValues" value="1" class="edittext" {% if edit.getFieldData('d3usecorrespondingvalues') == 1 %}CHECKED{% endif %} {{ readonly }}>
                                {% include "inputhelp.html.twig" with {'sHelpId': help_id("D3_EXTSEARCH_ATTRIBUTE_USECORRESPONDINGVALUES_DESC"), 'sHelpText': help_text("D3_EXTSEARCH_ATTRIBUTE_USECORRESPONDINGVALUES_DESC")} %}
                            </td>
                        </tr>
                    {% endblock %}
                    <tr>
                        <td class="edittext">
                        </td>
                        <td class="edittext"><br>
                            <input type="submit" class="edittext" name="save" value="{{ translate({ ident: "GENERAL_SAVE" }) }}" onClick="document.myedit.fnc.value='save'"" {{ readonly }}><br>
                        </td>
                    </tr>
                </table>
            </td>
            <!-- Anfang rechte Seite -->
            <td style="vertical-align: top; text-align: left" class="edittext">
                <table style="padding: 0; border: 0">
                    {% block d3_admin_attribute_extsearch_form2 %}
                        <tr>
                            <td class="edittext" colspan="2">
                                <h3>&nbsp;</h3>
                            </td>
                        </tr>

                        <tr>
                            <td class="edittext" colspan="2">
                                <p>
                                    <input {{ readonly }} type="button" value="{{ translate({ ident: "D3_EXTSEARCH_ASSIGNCATEGORIES" }) }}" class="edittext" onclick="showDialog('&cl=d3_attribute_extsearch&aoc=1&oxid={{ oxid }}');">
                                    {% include "inputhelp.html.twig" with {'sHelpId': help_id("D3_EXTSEARCH_ASSIGNCATEGORIES_DESC"), 'sHelpText': help_text("D3_EXTSEARCH_ASSIGNCATEGORIES_DESC")} %}
                                </p>

                                {% if false == oModCfg_d3_extsearch.getValue('blExtSearch_useAttributeListAssignments') %}
                                    <p>
                                        {{ translate({ ident: "D3_EXTSEARCH_NAVI_ATTRIBUTELIST_ASSIGNMENT_NA" }) }} {% include "inputhelp.html.twig" with {'sHelpId': help_id("D3_EXTSEARCH_NAVI_ATTRIBUTELIST_ASSIGNMENT_NA_DESC"), 'sHelpText': help_text("D3_EXTSEARCH_NAVI_ATTRIBUTELIST_ASSIGNMENT_NA_DESC")} %}
                                    </p>
                                {% endif %}
                            </td>
                        </tr>

                        <tr>
                            <td class="edittext" colspan="2">
                                <p>
                                    <input {{ readonly }} type="button" value="{{ translate({ ident: "D3_EXTSEARCH_ASSIGNMANUFACTURERS" }) }}" class="edittext" onclick="showDialog('&cl=d3_attribute_extsearch&aoc=2&oxid={{ oxid }}');">
                                    {% include "inputhelp.html.twig" with {'sHelpId': help_id("D3_EXTSEARCH_ASSIGNMANUFACTURERS_DESC"), 'sHelpText': help_text("D3_EXTSEARCH_ASSIGNMANUFACTURERS_DESC")} %}
                                </p>

                                {% if false == oModCfg_d3_extsearch.getValue('blExtSearch_useAttributeListAssignments') %}
                                    <p>
                                        {{ translate({ ident: "D3_EXTSEARCH_NAVI_ATTRIBUTELIST_ASSIGNMENT_NA" }) }} {% include "inputhelp.html.twig" with {'sHelpId': help_id("D3_EXTSEARCH_NAVI_ATTRIBUTELIST_ASSIGNMENT_NA_DESC"), 'sHelpText': help_text("D3_EXTSEARCH_NAVI_ATTRIBUTELIST_ASSIGNMENT_NA_DESC")} %}
                                    </p>
                                {% endif %}
                            </td>
                        </tr>

                        <tr>
                            <td class="edittext" colspan="2">
                                <p>
                                    <input {{ readonly }} type="button" value="{{ translate({ ident: "D3_EXTSEARCH_ASSIGNVENDORS" }) }}" class="edittext" onclick="showDialog('&cl=d3_attribute_extsearch&aoc=3&oxid={{ oxid }}');">
                                    {% include "inputhelp.html.twig" with {'sHelpId': help_id("D3_EXTSEARCH_ASSIGNVENDORS_DESC"), 'sHelpText': help_text("D3_EXTSEARCH_ASSIGNVENDORS_DESC")} %}
                                </p>

                                {% if false == oModCfg_d3_extsearch.getValue('blExtSearch_useAttributeListAssignments') %}
                                    <p>
                                        {{ translate({ ident: "D3_EXTSEARCH_NAVI_ATTRIBUTELIST_ASSIGNMENT_NA" }) }} {% include "inputhelp.html.twig" with {'sHelpId': help_id("D3_EXTSEARCH_NAVI_ATTRIBUTELIST_ASSIGNMENT_NA_DESC"), 'sHelpText': help_text("D3_EXTSEARCH_NAVI_ATTRIBUTELIST_ASSIGNMENT_NA_DESC")} %}
                                    </p>
                                {% endif %}
                            </td>
                        </tr>
                    {% endblock %}
                </table>
            </td>
            <!-- Ende rechte Seite -->
        </tr>
    </table>

</form>

{% include "bottomnaviitem.html.twig" %}
{% include "bottomitem.html.twig" %}
